#include "stdio.h"
#define	IS_UPPER(x) ( ((x) >= 'A') && ((x) <= 'Z') )

int main()
{
char a;

printf("This program can identify if a single character input is upper case or not.\n");
printf("Enter one single letter: ");
scanf("%c", &a);

if (IS_UPPER(a))
	printf("The character you entered was upper case.\n");
else 
	printf("The character you entered was lower case.\n");

return 0;
}
