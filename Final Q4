#include <stdio.h>

int countWords(char prose[]) {

	int i = 0, c = 0;
	int wordCount = 0;
	while (prose[i] != '\0') {
		printf("prose[i] is equal to %c.\n", prose[i]);
		
		switch 	(prose[i])
		{
		case ' ':
			wordCount++;
			printf("word_count is now equal to %i.\n", wordCount);
			break;
		default:
			//printf("not a blank\n");
			break;
		}

		++i;

	}
	++wordCount; //add one more to word_count since the program derives a word with a space at the end
	printf("FINAL word_count is now equal to %i.\n", wordCount);

	return wordCount;
}

int main()
{

	int i = 0, wordCount = 0;
	
	char prose[] = "To be, or not to be, that is the question";
		/*
		whether 'tis nobler in the mind to suffer
		the slings and arrows of outrageous fortune,
		or to take arms against a sea of troubles,
		and by opposing end them ? to die, to sleepâ€”
		no more; and by a sleep, to say we end
		the heart - ache, and the thousand natural shocks
		that flesh is heir to ? 'tis a consummation
		devoutly to be wished.to die, to sleep,
		to sleep, perchance to dream; aye, there's the rub,
		for in that sleep of death, what dreams may come,
		 when we have shuffled off this mortal coil,
		 must give us pause.";
		 */

	char *prose_ptr = &prose[0];

	//call function to count the number of words in the char string prose
	wordCount = countWords(&prose[0]);

	//convert the first lower case letter of each word to an upper case letter
	while (prose[i] != '\0') {
		printf("prose[i] is equal to %c.\n", prose[i]);
		
		if ((prose[i] >= 'a') && (prose[i] <= 'z')) { //it's a lowercase letter
			printf("Found a lowercase letter.\n");
			prose[i] = (char)prose[i] - 32;
			printf("after conversion the letter %c is %d\n", prose[i], prose[i]);
		}
		++i;

	}
	
	return 0;
}
